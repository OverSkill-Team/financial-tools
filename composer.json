{
    "name": "overskill-team/financial-tools",
    "description": "Financial tools and libraries",
    "type": "library",
    "keywords": [
        "Finance",
        "Financial"
    ],
    "license": "MIT",
    "require": {
        "php": "8.x"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "OverSkillTeam\\FinancialTools\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OverSkillTeam\\FinancialTools\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit tests",
        "phpstan": "phpstan analyse src"
    }
}
